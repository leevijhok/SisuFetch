<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane hgap="40.0" vgap="10.0" xmlns:fx="http://javafx.com/fxml"
          fx:controller="fi.tuni.prog3.sisu.StudentViewController" style="-fx-font-size: 14">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox alignment="CENTER_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="0">
        <Label text="First name: "/>
        <TextField fx:id="firstName"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" GridPane.rowIndex="1" GridPane.columnIndex="0">
        <Label text="Last name: "/>
        <TextField fx:id="lastName"/>
    </HBox>

    <HBox alignment="CENTER_LEFT" GridPane.rowIndex="0" GridPane.columnIndex="1">
        <Label text="Student number: "/>
        <TextField fx:id="studentNumber" editable="false"/>
    </HBox>
    <HBox alignment="CENTER_LEFT" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Label text="Degree programme: "/>
        <ComboBox fx:id="studyProgramme" accessibleText="Select degree programme"/>
    </HBox>

</GridPane>